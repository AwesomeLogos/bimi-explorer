{{template "above" .}}

<form class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-3" method="GET" action="/bimi/view.html">
  <div class="col-12">
    <label class="" for="page">Page</label>
</div>
<div class="col-12">
    <div class="input-group">
      <input type="text" class="form-control" id="page" name="page" placeholder="{{.CurrentPage}}" value="{{.CurrentPage}}" />
      <div class="input-group-text">of {{.MaxPage}}</div>
    </div>
  </div>

  <div class="col-12">
    <button type="submit" class="btn btn-primary">Go</button>
  </div>
</form>

{{range .Domains}}
<a class="mx-2" href="/bimi/{{.Domain}}/"><img src="{{.Imgurl.String}}" alt="{{.Domain}}" style="height:48pt;" /></a>
{{end}}

